<Window x:Class="Yagnov.MainWindow1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Yagnov"
        mc:Ignorable="d"
        Title="MainWindow1" Height="804" Width="545">
    <Grid Margin="0,6,0,-6">
        <Grid.RowDefinitions>
            <RowDefinition Height="64*"></RowDefinition>
            <RowDefinition Height="156*"></RowDefinition>
            <RowDefinition Height="29*"/>
            <RowDefinition Height="190*"></RowDefinition>
            <RowDefinition Height="24*"></RowDefinition>
            <RowDefinition Height="122*"></RowDefinition>
            <RowDefinition Height="29*"></RowDefinition>
            <RowDefinition Height="175*"></RowDefinition>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="48*"></ColumnDefinition>
            <ColumnDefinition Width="98*"></ColumnDefinition>
            <ColumnDefinition Width="43*"></ColumnDefinition>



        </Grid.ColumnDefinitions>
        <Button Grid.Column="1" Content="AddProductButton" HorizontalAlignment="Left" Height="42" Margin="6,62,0,0" Grid.Row="7" VerticalAlignment="Top" Width="263" />
        <TextBox x:Name="NameTextBox" Grid.Column="1" HorizontalAlignment="Left" Grid.Row="5" TextWrapping="Wrap" Text="Pecription" VerticalAlignment="Center" Width="212" Height="35" Margin="31,0,0,0"/>
        <TextBox x:Name="PriceTextBox" Grid.Column="1" HorizontalAlignment="Center" Grid.Row="3" TextWrapping="Wrap" Text="Price" VerticalAlignment="Center" Width="221" Height="36"/>
        <TextBox x:Name="DescriptionTextBox" Grid.Column="1" HorizontalAlignment="Left" Margin="35,0,0,0" Grid.Row="1" TextWrapping="Wrap" Text="ProductName" VerticalAlignment="Center" Width="198" Height="37" RenderTransformOrigin="0.5,0.5">
            <TextBox.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform AngleX="-0.982"/>
                    <RotateTransform/>
                    <TranslateTransform X="-0.557"/>
                </TransformGroup>
            </TextBox.RenderTransform>
        </TextBox>



    </Grid>
</Window>



